#:import XCamera kivy_garden.xcamera
# ScreenManager:
<MainScreen>:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name:"home_screen"
            text:"home"
            icon:"home"
            MDBoxLayout:
                orientation:"vertical"
                Image:
                    source:"feelsDeadMan.png"
        MDBottomNavigationItem:
            name:"camera_screen"
            text:"camera"
            icon:"camera"
            XCamera:
                id:camera
                on_picture_taken:app.picture_taken()
        MDBottomNavigationItem:
            name:"upload_screen"
            text:"upload"
            icon:"upload"
            UploadScreen:



<LoadDialog>
    BoxLayout:
        size:root.size
        pos:root.pos
        orientation:"vertical"
        Image:
            id: dialog_prev
            source: "Input-Img.png"
        FileChooserIconView:
            id: filechooser
            path:"."
            on_selection: root.selected_file(filechooser.selection)
        BoxLayout:
            size_hint_y:None
            height:30
            MDRectangleFlatButton:
                text:"Submit"
                on_release:root.img_send_to_main(filechooser.selection)
                #on_selection: root.selected_file(filechooser.selection)
            MDRectangleFlatButton:
                text:"Cancel"
                on_release:root.cancel()
<UploadScreen>
    id:uploadscr
    MDBoxLayout:
        orientation:"vertical"
        GridLayout:
            cols:2
            Image:
                id:input_img
                source:"Input-Img.png"
            Image:
                id:output_img
                source:"Output-Img.png"
                width:100
            MDFillRoundFlatButton:
                text:"Foto ausw√§hlen"
                on_release:root.show_load()
            MDFillRoundFlatButton:
                text:"Anpassen"







