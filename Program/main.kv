#: import XCamera kivy_garden.xcamera
ScreenManager:
    MainScreen
    HomeScreen
    UploadScreen
    CameraScreen
<MainScreen>:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name:"home_screen"
            text:"home"
            icon:"home"
            MDBoxLayout:
                orientation:"vertical"
                Image:
                    source:"feelsDeadMan.png"
        MDBottomNavigationItem:
            name:"camera_screen"
            text:"camera"
            icon:"camera"
            XCamera:
                id:camera
        MDBottomNavigationItem:
            name:"upload_screen"
            text:"upload"
            icon:"upload"
            MDBoxLayout:
                orientation:"vertical"
                GridLayout:
                    cols:2
                    Image:
                        id:input_img
                        source:"Input-Img.png"
                    Image:
                        id:output_img
                        source:"Output-Img.png"

                    MDFillRoundFlatButton:
                        text:"Foto ausw√§hlen"
                    MDFillRoundFlatButton:
                        text:"Anpassen"
